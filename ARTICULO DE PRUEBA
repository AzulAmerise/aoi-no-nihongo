  <script>
    function cambiarIdioma(valor) {
      const ruta = {
        'es': '../es/Articulo-1.html',
        'en': '../en/Articulo-1_en.html',
        'ja': '../ja/Articulo-1_ja.html'
      };
      window.location.href = ruta[valor];
    }
